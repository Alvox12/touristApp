<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/greyLight"
    android:layout_marginTop="@dimen/margin_56"
    android:layout_marginBottom="@dimen/margin_56"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/tituloAlertErrorComentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/title_error_login"
            android:textSize="@dimen/size_20"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_16"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/btnAceptarDialog"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        android:text="@string/reintentar"
        android:onClick="newComment"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="@dimen/size_18"
        android:textColor="@color/black" />


</LinearLayout>